head 
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")
  style 
    include ./bootstrap/bootstrap.min.css
    
body
  .container-fluid
    .row.justify-content-md-center
      .col-md-10.col-lg-8
        - var inOrderList = false;
        - var flag = 0;
        - var i = 0;
        - var index = 1;
        each result in results
          //- ul
          if(result.isFolder)
            h4.mt-5
              b 
                a(href=`/${result.slug}`, style="text-decoration: none;color:black;")= result.head
                - i=0;
              hr
          else 
            - i++
            //- li
            .map-content.d-inline-flex(style="")
              a(href=`/${result.slug}`, style="text-decoration: none;color:black;width:320px;").d-inline-flex
                p.text-secondary.me-3.fw-light= i
                p.text-dark= result.head
                      
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js")