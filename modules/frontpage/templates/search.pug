head 
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")
  style 
    include ./bootstrap/bootstrap.min.css
body
  nav.navbar.bg-body-tertiary.shadow-sm.mb-3
    .container-fluid
      a.navbar-brand.ms-5(href="../") 
        h3 
          b 知识库
      form.d-flex.mt-3(action="/search", method="get", role="search")
        input.form-control.me-2(type="search", name="keyword", placeholder="Search...",aria-label="Search")
        button.btn.btn-outline-success(type="submit") 
          span(class="bi bi-search")
        
  .container-fluid
    .row.justify-content-md-center
      .col-md-10.col-lg-8
        h4.mb-4 搜索结果 #{keyword} 
        
        each result in results
          .border.p-4.mb-4
            h5
              a(href=`/${result.slug}`, style="text-decoration: none;")= result.head
            p.mb-0!= result.content
  script 
    include ./bootstrap/bootstrap.min.js

        
