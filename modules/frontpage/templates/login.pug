doctype html
html(lang="en")

  head
    meta(charset="UTF-8")
    title Animated Login Form

  body
    .box
      form(autocomplete="off")
        h2 Sign in
        .inputBox
          input(type="text", required="required")
          span UserName
          i
        .inputBox
          input(type="password", required="required")
          span Password
          i
        .links
          a(href="#") Forgot Password ?
          a(href="./signup.html") Signup
        input(type="submit", value="Login")
