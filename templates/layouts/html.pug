//- header + footer + empty body
extends ./base

block html
  head
    block variables
    include ../blocks/head
      
    block head
    !=js("footer", {defer: true})

  body.text-bg-light
    script head.fontTest();

    if footer || (footer === undefined)
      .page-wrapper(class=[sidebar && 'page-wrapper_sidebar_on'])
        block body
    else
      block body
    
    script(src="/mode/mode.js")
    script
      include ./js/bootstrap.min.js
      include ./js/mode.js
    

